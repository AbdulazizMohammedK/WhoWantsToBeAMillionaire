<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhoWantsToBeAMillionaire" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashscreenContent" tools:targetApi="o">
            @drawable/splash_theme
        </item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quantico_bold</item>
    </style>

    <style name="TextStyle.ExtraLarge">
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white_87</item>
    </style>


    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">17dp</item>
        <item name="cornerSizeBottomRight">17dp</item>
    </style>

    <style name="Theme.WhoWantsToBeAMillionaire.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WhoWantsToBeAMillionaire.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.WhoWantsToBeAMillionaire.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>