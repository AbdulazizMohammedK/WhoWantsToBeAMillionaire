<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhoWantsToBeAMillionaire" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowSplashscreenContent" tools:targetApi="o">
            @drawable/splash_theme
        </item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quantico_bold</item>
    </style>

    <style name="TextStyle.ExtraLarge">
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white_87</item>
    </style>

</resources>