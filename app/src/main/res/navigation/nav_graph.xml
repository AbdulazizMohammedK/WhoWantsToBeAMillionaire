<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.frenchfriesfamily.whowantstobeamillionaire.view.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.frenchfriesfamily.whowantstobeamillionaire.view.question.QuestionFragment"
        android:label="QuestionFragment"
        tools:layout="@layout/fragment_question">
        <action
            android:id="@+id/action_questionFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_questionFragment_to_stage_screen_fragment"
            app:destination="@id/stage_screen_fragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.frenchfriesfamily.whowantstobeamillionaire.view.about.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.frenchfriesfamily.whowantstobeamillionaire.view.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result" />

    <fragment
        android:id="@+id/stage_screen_fragment"
        android:name="com.frenchfriesfamily.whowantstobeamillionaire.view.stage.StageFragment"
        android:label="StageScreen"
        tools:layout="@layout/fragment_stage">
        <action
            android:id="@+id/action_stage_screen_fragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>


</navigation>